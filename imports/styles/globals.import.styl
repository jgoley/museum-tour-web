body
ul
  margin 0
  padding 0

body
  font-family inherit
  height 100%

.page-wrap
  min-height 100%
  position relative

a
  &:focus
    text-decoration none

.main-content
  padding 0 0 45px 0
  &.menu-open
    padding-top $header-height

video
audio
img
  display block
  width 100%
  margin 0
  border-bottom 2px solid #888
  +above(3)
    width 60%
    margin 0 auto

video
  background-color black

audio
  min-height 200px
  background-color #000
  background-repeat no-repeat
  background-size auto 120px
  background-position center 40%

video
  &.audio
  &.music
  background-color #000
  background-repeat no-repeat
  background-position center center
  &.audio
    background-image url($awsUrl+'audio-poster.png')
  &.music
    background-image url($awsUrl+'music-poster.png')

.img-wrap
.video-wrap
  background-color black

.tap-list
  margin-bottom 30px
  list-style-type none
  border-bottom 2px solid $primary
  > li
    position relative
    border-bottom 1px solid lighten($secondary, 30%)
    &:last-of-type
      border 0
  a
    display block
    color $body-text
    padding 10px 7% 10px 3%
    transition .2s
    &:active
    &:hover
      background lighten($secondary, 90%)
      text-decoration none
      transition .2s
    &:active
      background lighten($secondary, 80%)
    &::after
      position absolute
      right 10px
      top 50%
      transform translate(0, -50%)
      @extend .font-awesome
      content '\f054'
      color darken($ll-gray, 15%)

.tap-list-title
  h2
    margin 0
    font-size 1.2em
    font-weight bold
    letter-spacing .02em
    font-family $body-font
  span
    font-size .9em
    display block
    font-weight 400
  .dates
    margin-top 0
    padding 0
    font-size 75%
    color darken($m-gray, 20%)


.main-title-wrap
  position relative
  width 100%
  padding 20px 3% 10px 3%
  background-color rgba(red($secondary), green($secondary), blue($secondary), .85)
  h1
    display inline-block
    vertical-align middle
    margin-bottom 0
    line-height .8em
  &.tour-title
    position absolute
    bottom 0
    padding 10px 3% 5px 3%
    text-align center
    background-color rgba(230,230,230,0.85)
    .main-title
      padding 0
      vertical-align middle
      font-weight normal
    .sub-title
      display block
      font-size .7em

.goto-stop-wrap
  margin 20px 0
  +desktop()
    display none

.goto-stop
  input
    height 45px
    padding 0 10px
    text-align center
    margin-bottom 10px
    font-size 1.4em
    &[type=submit]
      background-color desaturate(lighten($confirm,8%),10%)
    &[type=number]
      +below(2)
        margin-bottom 10px

.goto-stop-btn
  &[type=submit]
    &[disabled]
      background-color $m-gray
      border-color darken(@background-color, 20%)
      color darken(@background-color, 40%)

.stopNumber-wrap
  +above(3)
    padding-right 0
.goto-stop-btn-wrap
  +above(3)
    paddin-left 0

.btn
  padding 6px 25px
  .fa
    margin-top -2px
    vertical-align middle
    &.left
      margin-right 5px
    &.right
      margin-left 5px

.btn-plain
  margin 0
  padding 0
  border 0
  background none
  color darken($secondary,50%)
  tranisition()
  &:hover
  &:active
    color darken($secondary,70%)
    background none
    outline 0
    box-shadow 0
  &:active
    color darken($secondary,80%)

.btn-header
  display inline-block
  vertical-align middle
  margin-left 10px
  background-color alpha(lighten($secondary, 40%), 50%)
  border darken($secondary, 20%)
  font-family $body-font
  transition .2s
  i
    margin-left 3px
  &:hover
  &:focus
  &:active
    background-color alpha(darken($secondary, 30%), 50%)
    border darken($secondary, 20%)
    color white
    transition .2s
    box-shadow none
    outline 0
  &:active
    background-color alpha(darken($secondary, 30%), 70%)

.curtain
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background rgba(0,0,0,.6)
  content ''
  z-index 100
  transition 1s
  opacity 0
  visibility hidden
  &.down
    opacity .6
    visibility visible
    +above(3)
      opacity 0
      visibility hidden
.container-fluid
  padding 1em 3%

.notification
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 10000
  &.success
  &.error
    background-color alpha(lighten($confirm,20%), 90%)
    &::after
      @extend .font-awesome
      font-size 10em
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
      z-index 10001
  &.error
    background-color alpha(lighten($warning,20%), 90%)
    &::after
      content '\f071'
  &.thumbs
    &::after
      content '\f087'
  &.spock
    &::after
      content '\f259'
  &.peace
    &::after
      content '\f25b'
  &.airplane
    &::after
      content '\f1d9'
  &.battery
    &::after
      content '\f240'
  &.cake
    &::after
      content '\f1fd'
  &.smile
    &::after
      content '\f118'
  &.star
    &::after
      content '\f005'
  &.trophy
    &::after
      content '\f091'
