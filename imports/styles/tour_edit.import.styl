.edit-tour
  display inline-block
  vertical-align top
  font-size 150%
  cursor pointer

.editing-container
  min-height 0
  padding-left calc(3% + 50px)
  padding-top 1em
  padding-bottom 1em
  transition ease-in-out
  &.showing
    min-height 1000px
  +below(2)
    padding-right 5%

.media-types
  display inline-block
  margin 0 2px
  li
    display inline-block
    margin 0 2px

.edit-parent-stops
  > li
    position relative
    padding 5px 3%
    border-bottom #CCC 1px solid
    background white
    transition 1s opacity
    transition-delay .2s
    +mobile()
      padding 5px 3%
    &:nth-child(even)
      background lighten($secondary-light, 95%)
    .delete
      @extend .delete-icon
    &[draggable=true]
      .handle
        cursor -webkit-grabbing
  .handle
    font-size 1.2em
    color lighten($l-gray, 10%)
    margin-right 5px
    margin-top 2px
    min-width 20px
    cursor -webkit-grab
    +below(2)
      font-size 1em

.not-editing
  opacity .15
  pointer-events none

.edit-child-stops
  position relative
  > li
    position relative
    padding 5px 3%  5px calc(3% + 25px)
    border-bottom 1px solid darken($ll-gray, 5%)
    display flex
    align-items center
    &:nth-child(even)
      background $ll-gray
    .stop-number
      font-size 1.5em
      +below(2)
        font-size 1em
    .delete
      @extend .delete-icon
      color lighten($l-gray, 20%)

.sortble-ghost
  background #f0f0f0 !important
  box-shadow inset 0 0 5px rgba(0,0,0,.1)

.child-stops
  transition .2s

.edit-title-input
  vertical-align bottom
  font-size 1.5em
  font-weight 300
  height 35px
  border 1px solid #6dbcda

.edit-title-form
  display flex
  min-width 60%

.edit-title
  position relative
  cursor pointer
  color $d-gray
  width 100%

.action-btns-form
  display flex
  margin-left 1em
  button
    font-size 1.75em
    transition $link-transition
  .save-title
    color $confirm
    margin-right .2em
    &:hover
      color darken(@color, 30%)
      transition $link-transition
  .cancel-edit-title
    color $m-gray
    &:hover
      color darken(@color, 30%)
      transition $link-transition

.edit-title-btn
  margin-bottom 2px
  padding 0 .5em 0 .25em
  &:hover
    i
      color $primary
  i
    font-size .65em
    color lighten($d-gray, 50%)
    transition $link-transition
    line-height 0
    +mobile()
      margin-top 3px
.stop-count
  font-size 1.5em
  color lighten($primary, 80%)
  line-height 0
  margin-right 1em
  +mobile()
    font-size .5em
  i
    margin-right 3px

.open
  background lighten($secondary, 90%) !important
  a.delete
    top 5px
    transform translate(0,0)

.edit-single
  +mobile()
    padding 10px 5px 10px 20px

.action-btns
  margin 35px 0 10px 0
  [type=submit]
    min-width 25%
    margin-right 3px

.delete-file
  margin-left 5px
  font-size 110%

.section-title
  margin-bottom 0
  margin-left 6%
  border-bottom 2px solid lighten($secondary, 80%)
  font-size 2.5em
  font-weight 800
  text-transform uppercase
  color $secondary-light
  letter-spacing .03em
  line-height 1em
  &.pull-back
    margin-left 0%

.main-title-wrap
  .main-title
    padding-right 15px
  .delete-tour
    centerVertically()
    right 3%
    font-size 150%
    margin-right 0
    &:hover
      color $primary
  button
  a
    margin-right 10px
    &.show-tour-details
      font-size 2em
    &.view-tour
      font-size 1.8em
    &.view-tour
    &.show-tour-details
      &:focus
        background none
        box-shadow 0
        outline 0

.add-stop
  margin-top 1em

.add-stop-link
  background-color #FFF
  transition .3s
  cursor pointer
  font-weight 700
  &:hover
    transition .3s
    background $ll-gray
  i
  span
    vertical-align middle
  i
    font-size 70%
    margin-right 5px
  a
    color $primary
    display block
    &:hover
      text-decoration none

.add-stop-container
  padding-right 3.5%

.add-child
  a
    padding-left 15px
    font-weight 700

.new-child
  padding-bottom 20px
  padding-left 6%
  border-bottom 1px solid $secondary-light

.new-parent
  margin-bottom 50px
  padding-left 6%
  padding-top 10px
  border-top 3px solid $secondary
  .radio
    &:first-of-type
      margin-top 0

.edit-stop-details
  margin-bottom 2em
  margin-top 1em

.other-edit-options
  margin-bottom 20px
  padding-top 20px

.add-to-group-wrap
  select
  button
    display inline-block
    vertical-align middle

.parent-number
  color $m-gray

.no-file
  color lighten($primary, 50%)
.no-file-warning
  color lighten($warning,50%)
  margin-left 5px

.saved
  button
    &.save
      &::before
        content '\f00c'
        @extend .font-awesome
        padding-right 5px
        transition .2s

.tiny-media
  min-width 100px
