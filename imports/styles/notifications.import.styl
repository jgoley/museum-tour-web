$icons = {
  caution: '\f071',
  thumbs:'\f087',
  spock: '\f259',
  peace: '\f25b',
  airplane: '\f1d9',
  battery: '\f240',
  cake: '\f1fd',
  smile: '\f118',
  star: '\f005',
  trophy: '\f091'
}

.notification
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 10000
  display flex
  align-items center
  justify-content center
  &.success
    background-color alpha(lighten($confirm,20%), 95%)
  &.error
    background-color alpha(lighten($warning,20%), 95%)
  .content
    text-align center
    p
      font-size 1.5em
    i
      font-size 2.5em
      opacity .5
      cursor pointer
      &:hover
        opacity 1
    &::before
      line-height 1
      @extend .font-awesome
      font-size 10em
      z-index 10001

  for $iconName, $unicode in $icons
    .{$iconName}
      &::before
        content ''+$unicode
