.stop-title
  font-weight bold
  font-size 1.2em

.tour-stop
  h1
    padding 15px 3% 5px 3%
    background $secondary
    color black
    line-height 100%
    margin 0
    border-bottom 3px solid darken($secondary, 10%)
    &.single-title
      padding-top 20px
    .stopNumber
      color white
      font-weight 400

.child-stop
  &:first-of-type
    .child-stop-info
      padding-top 15px

.child-stop-title
  font-family $body-font
  > span
    font-size .7em
    color $body-text
    background-color $secondary
    border-top-right-radius 3px
    border-bottom-right-radius 3px
    margin-left -4%
    padding 5px 10px 5px 4%
    +above(4)
      padding 5px 10px 5px 22%
  span
    display inline-block
    font-weight bold
    &.child-stop-number
      font-weight normal
      color white


.child-stop-info
  padding 25px 3% 5px 3%
  background lighten(desaturate($secondary, 40%), 50%)
  border-bottom 3px solid darken(@background, 10%)
  h2
    line-height 100%
    margin 0 0 3px 0

.child-stop-subTitle
  margin 0
  +desktop()
    font-size 1.2em
  +above(4)
    padding 3px 3% 8px 18%
  &.single
    background lighten($secondary, 30%)
    padding 3px 3% 8px 3%

.stop-nav
  margin-top 20px
  margin-bottom 50px
  border-top 4px solid darken($primary, 20%)
  > div
    padding 0
  div
    &:first-of-type
      border-right 1px solid darken($primary, 20%)
    &:last-of-type
      border-left 1px solid darken($primary, 20%)

.stop-nav-button
  display block
  padding 15px
  text-align center
  color white
  background $primary
  transition .2s ease-in-out
  text-shadow 0 1px 0 alpha($primary-dark, 50%)
  &:hover
    color white
    text-decoration none
  &:active
    background $primary-dark
    color white
  &[disabled]
    background desaturate(lighten($primary, 30%),20%)
    color lighten(@background, 65%)
    cursor not-allowed
  span
  i
    vertical-align middle
  i
    font-size 150%
    padding 0 4px
