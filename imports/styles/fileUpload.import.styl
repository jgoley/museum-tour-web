.btn-file
  position relative
  overflow hidden
  padding-top 6px
  padding-bottom 6px
  span
    display inline-block
    margin 0 3px 0 0
  input[type=file]
    position absolute
    top 0
    right 0
    min-width 100%
    min-height 100%
    font-size 100px
    text-align right
    opacity 0
    outline none
    background white
    cursor inherit
    display block

.file-name-wrap
  position relative
  height 35px
  .remove
    transform translate(0, -50%)
    position absolute
    right 10px
    top 50%
    font-size 20px
    cursor pointer
    z-index 10
    transition .2s
    &:hover
      color $primary
      transition .2s

.file-name
.input-group .form-control:first-child
  padding-right 30px
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  color darken($m-gray, 10%)
  border-top-left-radius 0
  border-bottom-left-radius 0
  border-left 1px solid $m-gray
  border-top-right-radius 4px
  border-bottom-right-radius 4px
  transition .2s
  &.has-file
    color darken($d-gray, 20%)
    transition .2s
  &:focus
    border-color $m-gray

.file-upload
  margin-bottom 10px
  .parsley-errors-list
    margin 0
